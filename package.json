{
  "name": "zlibrary-mcp",
  "version": "1.0.0",
  "description": "Z-Library MCP server for AI assistants",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./lib/*": "./dist/lib/*"
  },
  "bin": {
    "zlibrary-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/validate-python-bridge.js",
    "validate": "node scripts/validate-python-bridge.js",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "zlibrary",
    "ai",
    "roocode",
    "cline"
  ],
  "author": "loganrooks",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.8.0",
    "env-paths": "^3.0.0",
    "python-shell": "^5.0.0",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loganrooks/zlibrary-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/loganrooks/zlibrary-mcp/issues"
  },
  "homepage": "https://github.com/loganrooks/zlibrary-mcp#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^18.19.4",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "nock": "^13.4.0",
    "sinon": "^17.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.5.3"
  }
}
